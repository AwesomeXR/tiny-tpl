  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "release-it": "^17.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
