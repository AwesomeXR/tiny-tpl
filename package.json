{
  "name": "tiny-tpl",
  "version": "0.0.1",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest",
    "ci": "prettier --check src && tsc -p tsconfig.json --noEmit",
